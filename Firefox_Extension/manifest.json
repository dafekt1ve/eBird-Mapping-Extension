{
  "manifest_version": 2,
  "name": "eBird Sightings Mapper",
  "version": "1.0",
  "description": "Displays a Leaflet map of eBird sightings colored by species count.",
  "permissions": [
    "activeTab",
    "tabs",
    "notifications",
    "https://api.ebird.org/*",
    "https://ebird.org/alert/*",
    "https://ebird.org/lifelist*",
    "https://ebird.org/mychecklists*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Map Sightings",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "web_accessible_resources": [
    "leaflet/leaflet.js",
    "leaflet/leaflet.css",
    "leaflet/leaflet.js.map",
    "d3/d3.v7.min.js",
    "map.js",
    "lifelist-map.js",
    "mychecklists-map.js",
    "regionLookup/regionLookup.json"
  ],
  "icons": {
    "48": "icon.png"
  }
}
